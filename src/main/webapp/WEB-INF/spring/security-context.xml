 <!-- Authentication using a memory user list -->
    <security:authentication-manager alias="authenticationManager">
        <security:authentication-provider>
            <security:user-service>
                <security:user name="gerenteArea" password="welcome1" authorities="GERENTE_AREA" />
                <security:user name="jefeContratos" password="welcome1" authorities="JEFE_CONTRATOS" />
                <security:user name="jefeBienesInmuebles" password="welcome1" authorities="JEFE_BIENES_INMUEBLES" />
                <security:user name="analista" password="welcome1" authorities="ANALISTA" />
                <security:user name="consultaReportes" password="welcome1" authorities="CONSULTA_REPORTES" />
                <security:user name="capturaSeguimientos" password="welcome1" authorities="CAPTURA_SEGUIMIENTOS" />
                <security:user name="fechaActividades" password="welcome1" authorities="FECHA_ACTIVIDADES" />
                <security:user name="todos" password="welcome1" authorities="TODOS" />
            </security:user-service>
        </security:authentication-provider>
    </security:authentication-manager>
    <security:http auto-config="true" use-expressions="true">
        <!-- Login pages -->
        <security:form-login login-page="/login.htm" authentication-failure-url="/login-error.htm" />
        <security:logout />
        <!--
        	Security zones 
        	<security:intercept-url pattern="/user/**" access="hasRole('ROLE_USER')" />
        -->
        
		<!--  *************************************************************************************
		*  CONTACTOS
		************************************************************************************* -->
        <security:intercept-url pattern="/contactos.htm" access="hasAnyRole('GERENTE_AREA','JEFE_CONTRATOS','JEFE_BIENES_INMUEBLES')" />
